{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "zeroConfig": true
      }
    },
    {
      "src": "pages/**/*.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/movies",
      "dest": "/api/movies"
    },
    {
      "src": "/api/movies/(.*)",
      "dest": "/api/movies/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
